@page "/login/"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    var thongbao = @TempData["ErrorMessage"];
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>
        Đăng nhập
    </title>
    <script src="https://cdn.tailwindcss.com">
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&amp;display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: "Roboto", sans-serif;
        }
    </style>
</head>
<body class="min-h-screen bg-[#f9fafb] flex flex-col items-center justify-center relative px-4">
    <img alt="Arrangement of natural skincare products with leaves on a white background, softly faded behind the login form" class="absolute inset-x-0 bottom-0 mx-auto max-w-full opacity-20 pointer-events-none select-none" height="300" src="https://storage.googleapis.com/a1aa/image/bce6127a-8159-423f-b29e-ead448571efd.jpg" style="max-height: 300px;" width="600" />
    <h1 class="text-center text-[#4a4a2c] font-semibold text-lg mb-6 select-none">
        Đăng nhập
    </h1>
    <form autocomplete="off" class="bg-white rounded-xl shadow-lg w-full max-w-md p-8 relative z-10">
        <input class="w-full border border-[#e6e6c7] rounded-md px-4 py-3 mb-4 text-sm placeholder-[#999a7f] focus:outline-none focus:ring-2 focus:ring-[#a3b04a]" placeholder="Email của bạn" required="" type="email" />
        <input class="w-full border border-[#e6e6c7] rounded-md px-4 py-3 mb-4 text-sm placeholder-[#999a7f] focus:outline-none focus:ring-2 focus:ring-[#a3b04a]" placeholder="Nhập mật khẩu" required="" type="password" />
        <div class="flex items-center justify-between mb-6 text-xs text-[#7a7a4a]">
            <label class="flex items-center space-x-2 cursor-pointer select-none">
                <input class="w-4 h-4 border border-[#999a7f] rounded-sm focus:ring-1 focus:ring-[#a3b04a]" type="checkbox" />
                <span class="italic">
                    Lưu trạng thái đăng nhập 60 ngày
                </span>
            </label>
            <a class="text-[#4a4a2c] underline hover:text-[#6b6b3a] font-semibold" href="#">
                Lấy lại mật khẩu
            </a>
        </div>
        <button class="w-full bg-[#3f5a0a] text-white font-semibold py-3 rounded-md mb-6 hover:bg-[#2f4307] transition-colors" type="submit">
            Đăng nhập
        </button>
        <div class="flex items-center mb-6 text-xs text-[#999a7f]">
            <div class="flex-grow border-t border-[#e6e6c7]">
            </div>
            <span class="mx-3 select-none">
                Hoặc
            </span>
            <div class="flex-grow border-t border-[#e6e6c7]">
            </div>
        </div>
        <button class="w-full bg-[#3b5998] text-white font-semibold py-3 rounded-md hover:bg-[#2d4373] transition-colors" type="button">
            Đăng nhập với Google
        </button>
        <p class="mt-6 text-center text-xs text-[#4a4a4a]">
            Bạn chưa có Tài khoản? Vui lòng đăng ký Tài khoản mới
            <a class="underline text-[#4a4a2c] font-semibold hover:text-[#6b6b3a]" href="#">
                tại đây
            </a>
            .
        </p>
    </form>
</body>
</html>


