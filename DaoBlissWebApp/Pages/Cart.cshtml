                                <li>
                                    Đơn Hàng Dưới 400K Chỉ
                                </li>
                                <li>
                                    Mua Sản Phẩm Sớm 17:00
                                </li>
                                <li>
                                    Tặng 01 Bông Tay Trang
                                </li>
                                <li>
                                    Có Mềm
                                </li>
                            </ul>
                        </div>
                        <div class="min-w-[120px] border-r border-[#3a5a1a] p-2 shrink-0">
                            <div class="font-bold mb-1">
                                MUA1TANG1
                            </div>
                            <ul class="list-disc pl-4 space-y-0.5 font-normal text-[10px] leading-tight">
                                <li>
                                    Mua Dầu Gội/ Dầu Xả/
                                </li>
                                <li>
                                    Serum Tóc Bất Kỳ tặng
                                </li>
                                <li>
                                    Serum Tóc Mini Giá 120k
                                </li>
                            </ul>
                        </div>                      
                    </div>
                    <button aria-label="Next voucher" class="absolute right-0 top-1/2 -translate-y-1/2 z-10 bg-white border border-[#3a5a1a] rounded-full w-6 h-6 flex items-center justify-center text-[#3a5a1a] hover:bg-[#3a5a1a] hover:text-white transition select-none" id="voucher-next" type="button">
                        <i class="fas fa-chevron-right text-[10px]">
                        </i>
                    </button>
                </div>
                <!-- Discount code input -->
                <div class="flex gap-2 mt-2">
                    <input class="flex-1 border border-[#d6d6b8] rounded px-3 py-2 text-[13px]" placeholder="Mã giảm giá" type="text" />
                    <button class="bg-[#f28c1f] text-white font-semibold text-[13px] px-4 rounded" type="button">
                        Áp dụng
                    </button>
                </div>
                <!-- Order summary -->
                <div class="border border-[#d6d6b8] rounded p-4 text-[12px] text-[#333]">
                    <div class="flex justify-between mb-1">
                        <span>
                            Tổng giá trị đơn:
                        </span>
                        <span class="font-semibold">
                            790.000đ
                        </span>
                    </div>
                    <div class="flex justify-between mb-1">
                        <span>
                            Phí giao hàng:
                        </span>
                        <span class="font-semibold">
                            25.000đ
                        </span>
                    </div>
                    <div class="flex justify-between mb-1">
                        <span>
                            Giảm giá:
                        </span>
                        <span>
                        </span>
                    </div>
                    <div class="flex justify-between items-center border-t border-[#d6d6b8] pt-2 mt-2">
                        <span class="font-bold text-[14px] text-[#f28c1f]">
                            Tổng thanh toán:
                        </span>
                        <div class="text-[14px] font-bold text-[#f28c1f] flex items-center gap-2">
                            815.000đ
                            <span class="text-[11px] font-normal text-[#666]">
                                Tiết kiệm
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
           const slider = document.getElementById('voucher-slider');
        const btnNext = document.getElementById('voucher-next');
        const btnPrev = document.getElementById('voucher-prev');

        const scrollAmount = 120; // width of one item approx

        btnNext.addEventListener('click', () => {
          slider.scrollBy({ left: scrollAmount, behavior: 'smooth' });
        });

        btnPrev.addEventListener('click', () => {
          slider.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
        });
    </script>
</body>
</html>


